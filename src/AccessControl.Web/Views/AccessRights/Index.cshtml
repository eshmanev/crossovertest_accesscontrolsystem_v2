@model AccessControl.Web.Models.AccessRights.AccessRightsIndexViewModel


<h3>Users' access rights</h3>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th rowspan="2">User</th>
            <th colspan="3">Access Rights</th>
            <th rowspan="2">#</th>
        </tr>
        <tr>
            <th>Type</th>
            <th>Department</th>
            <th>Access Point</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var rights in Model.UserAccessRights.OrderBy(x => x.UserName))
    {
        <tr><td rowspan="@(2 + rights.PermanentAccessRules.Length + rights.ScheduledAccessRules.Length)">@Model.GetDisplayUserName(rights.UserName)</td></tr>
        @Html.Partial("PermanentPartial", new { Rules = rights.PermanentAccessRules, Owner = Model, Identity = rights.UserName, IsGroup = false })
        @Html.Partial("ScheduledPartial", new { Rules = rights.ScheduledAccessRules, Owner = Model, Identity = rights.UserName, IsGroup = false })
    }
    </tbody>
</table>
<br/>

<h3>User groups' access rights</h3>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th rowspan="2">User group</th>
            <th colspan="3">Access Rights</th>
            <th rowspan="2">#</th>
        </tr>
        <tr>
            <th>Type</th>
            <th>Department</th>
            <th>Access Point</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rights in Model.UserGroupAccessRights)
        {
            <tr><td rowspan="@(2 + rights.PermanentAccessRules.Length)">@Model.GetDisplayGroupName(rights.UserGroupName)</td></tr>
            @Html.Partial("PermanentPartial", new { Rules = rights.PermanentAccessRules, Owner = Model, Identity = rights.UserGroupName, IsGroup = true })
        }
    </tbody>
</table>
<br/>

@Html.Partial("EditorPartial")

@section scripts
{
    <script type="text/javascript" src="~/Scripts/access-rights-index.js"></script>
}
